<Window x:Class="It_hosting_2._0.View.UserProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:It_hosting_2._0.View"
        mc:Ignorable="d"
        Title="UserProfileView" Height="500" Width="1300">
    <Grid Margin="0" Background="DimGray">
        <Button Background="DimGray" Grid.Row="1" FontSize="25" Grid.ColumnSpan="5" Grid.Column="1" Command="{Binding OpeningRepositoriesCommand}" Margin="600 100 50 300">Repositories</Button>
        <Label Grid.Row="1" FontSize="50" Grid.ColumnSpan="5" Grid.Column="1" Content="{Binding UserName}" Margin="100 100 900 270"></Label>
        <Label Grid.Row="2" FontSize="30" Grid.ColumnSpan="5" Grid.Column="1" Content="{Binding Login}" Margin="100 200 900 160"></Label>
        <Image Grid.Row="1" Grid.RowSpan="2" Source="{Binding ImageSource}"></Image>
    </Grid>
</Window>
